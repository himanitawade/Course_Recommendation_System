PageManager:
    
    HomePage:
    CoursePage:
    
<HomePage>:
    name:"homepage"
    home:home
    spinner_prog:spinner_prog
    MDCard:
        size_hint: None, None
        size: 900, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 20
        padding: 25
        spacing: 25
        orientation: 'vertical'
        
    
    MDLabel:
        id: home
        text: "Course Recomendation System"
        font_size: 40
        halign: 'center'
        size_hint_y: None
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        height: self.texture_size[1]
        padding_y: 15
        
    
    MDLabel:
        id: CSU_Login
        text: "What do you want as a concentration"
        font_size: 30
        halign: 'center'
        size_hint_y: None
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        height: self.texture_size[0]
        padding_y: 15

    
    Spinner:
        id: spinner_prog
        text: "Select Concentration"
        values:["Software Engineering","Cybersecurity", "Artificial Intelligence","Computer Systems","Software Development","Computer Science (Theory)","Computer Applications"]
        pos_hint: {"center_x": 0.5, "center_y": 0.56}
        size_hint:(None,None)
        size: (400, 40)
        
        on_text: root.Userinterest(spinner_prog.text)
        
        
    MDIconButton:
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        md_bg_color: app.theme_cls.accent_dark
        icon: 'gesture-tap-box'
        on_press: root.Userinterest(root.ids.interest.text)
              
    Image:
        source:'Images/Logo.png'
        size_hint_x: 0.2
        allow_stretch: True
        pos_hint: {"center_x": 0.1, "center_y": 0.9}
        
<CoursePage>:

    name:"coursepage"

    #home button
    MDIconButton:
        pos_hint: {"center_x": 0.9, "center_y": 0.9}
        md_bg_color: app.theme_cls.accent_dark
        icon: 'home'
        on_press:            
            app.root.current = "homepage"
            root.manager.transition.direction ="left"
    
    
